<%- include('../layout/adminHeader')  %>
    <h1>You are editing: <%= title %> page</h1>
    <a href="/admin/pages" class="btn btn-success">Back to all pages</a>
    <br><br><br>
    <form method="POST" action="/admin/pages/edit-page/<%= slug %>"> 
       
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
        </div>

        <!-- <div class="form-group">
            <label for="">Slug</label>
            <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
        </div> -->

        <div class="form-group">
            <label for="">Content</label>
            <textarea type="text" id="ta" class="form-control" cols="10" rows="10" name="content" value="<%= content %>" placeholder="Content"></textarea>
        </div>
        <input type="hidden" name="id" value="<%= id %>">
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
<%- include('../layout/adminFooter')  %>