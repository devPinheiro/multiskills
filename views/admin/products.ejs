<%- include('../layout/adminHeader')  %>
<h1>All Product</h1>
<a href="/admin/products/add-product" class="btn btn-success">Add a new product</a>
<br><br>

 <table class="table table-bordered ">
    <thead>
     <tr class="home">
        <th>Product</th>
        <th>Price</th>
        <th>Category</th>
        <th>Product Image</th>
        <th>Edit</th>        
        <th>Delete</th>
      </tr>
    </thead>
    <% if (count > 0) { %>
    <tbody>
  

        <% products.forEach((product) => { %>
        <tr>
            <td>
                <%= product.title %>
            </td>
            <td>
                <%= parseFloat(product.price).toFixed(2) %>
            </td>
            
            <td>
                <%= product.category %>
            </td>
            <td>
                <% if (product.image === "") { %>
                    <img src="/images/noImage.jpg" alt="">
                    <% } else{ %>
                        <img id="product_img" src="/product_images/<%= product._id %>/<%= product.image %>" alt="">
                        <% } %>
            </td>

            

            

            <td>
                <a href="/admin/products/edit-product/<%= product._id %>">Edit</a>
            </td>
           
            <td>
                <a class="confirmDeletion" href="/admin/products/delete-product/<%= product._id %>">Delete</a>
            </td>
          <tr>

        <% }); %>
    </tbody>
    <% } else { %>
        <h3 class="text-center">No products availble</h3>
        <% } %>
 </table>



<%- include('../layout/adminFooter')  %>
<script src="../../assets/dist/js/jquery-ui.js"></script>
