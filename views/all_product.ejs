<% include layout/header %>

<div class="col-xs-12 col-md-6">
    <div class="row">
        
            <% products.forEach(function(p){ %>
                <div class="col-xs-12 col-md-4 mb-3">
                    <a href="/products/<%= p.category%>/<%= p.slug%>" class="hre">
                       <img src="/product_images/<%= p.id%>/<%= p.image%>" width="200px" height="220px" alt="" srcset="">
                    </a> 
                    <h3><%= p.title %></h3>
                    <h6><strong><%= parseFloat(p.price).toFixed(2) %></strong></h6> 
                    <a href="/products/<%= p.category%>/<%= p.slug%>" class="hrr">View more</a>
                </div>
            <% }); %>

    </div>
</div>
<div class="col-xs-12 col-md-3"></div>

<% include layout/footer %>