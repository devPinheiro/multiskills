<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>eStore - <%= title %></title>

    <!-- Bootstrap core CSS -->
    <link href="../../assets/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="../../assets/dist/css/starter-template.css" rel="stylesheet">
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#">Shopper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <% pages.forEach(function(page){ %>
                    <% if(page.slug== "home") {%>
                        <li class="nav-item active">
                            <a class="nav-link" href="/"><%= page.title %> <span class="sr-only">(current)</span></a>
                        </li>
                
                   <%} else { %> 
                    <li class="nav-item active">
                        <a class="nav-link" href="<%= page.slug %>"><%= page.title %> <span class="sr-only">(current)</span></a>
                    </li>
                    <%}%>
                
                <%  }); %>
               
            </ul>
            <ul class="nav navbar-nav">
                <li>
                    <a href="/cart/checkout">My Cart(
                        <% if (typeof cart !== "undefined"){ %>
                            <% cart.length %>
                            <%} else {%>
                                0
                            <%}%>
                    )</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="container">
  <%- messages('messages', locals) %>

  <div class="row">
      <div class="col-xs-12 col-md-3">
          <h3>Catgeories</h3>
          <ul class="list-group">
              <li class="list-group-item">
                  <a href="/products/catalogue" class="hre">All Products</a>
                </li>
            <% categories.forEach(function(category){ %>
              <li class="list-group-item">
                    <a class="n" href="/products/<%= category.slug %>"><%= category.title %> <span class="sr-only">(current)</span></a>
              </li>    
            <%  }); %>
          </ul>
            
      </div>
     
  